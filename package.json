{
  "name": "pokemon-rpg-legends",
  "version": "1.0.0",
  "description": "Pokemon RPG Legends for Mac",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none npm run web\" \"wait-on http://localhost:3000 && electron .\"",
    "web": "webpack serve --mode development --hot",
    "build": "webpack --mode production",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.pokemon.rpg",
    "productName": "Pokemon RPG Legends",
    "mac": {
      "category": "public.app-category.games",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "dist/**/*",
      "main.js"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@react-spring/web": "^9.7.5",
    "@react-three/drei": "^9.108.3",
    "@react-three/fiber": "^8.16.8",
    "@types/three": "^0.182.0",
    "animejs": "^3.2.2",
    "gsap": "^3.14.2",
    "lodash": "^4.17.21",
    "lottie-react": "^2.4.1",
    "pixi.js": "^7.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.165.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "wait-on": "^7.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
